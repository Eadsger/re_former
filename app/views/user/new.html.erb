<h1>Create a New User</h1>

<form action="<%= users_path %>" method="post" accept-charset="UTF-8">
  <%= csrf_meta_tags %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag "user_username", "Username" %>
    <%= text_field_tag "user[username]", nil, id: "user_username" %>
  </div>

  <div class="field">
    <%= label_tag "user_email", "Email" %>
    <%= email_field_tag "user[email]", nil, id: "user_email" %>
  </div>

  <div class="field">
    <%= label_tag "user_password", "Password" %>
    <%= password_field_tag "user[password]", nil, id: "user_password" %>
  </div>

  <div class="actions">
    <%= submit_tag "Create User" %>
  </div>
</form>
