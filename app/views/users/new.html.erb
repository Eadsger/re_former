<h1>Create a New User</h1>

<%= form_with(model: @user, url: users_path, method: :post) do |form| %>
  <%= form.hidden_field :authenticity_token, value: form_authenticity_token %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username, "Your user name here" %>
    <%= form.text_field :username, name: "user[username]", value: "JohnDoe" %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, name: "user[email]", placeholder: "example@example.com" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, name: "user[password]", placeholder: "Enter your password" %>
  </div>

  <div class="actions">
    <%= form.submit "Create User" %>
  </div>
<% end %>